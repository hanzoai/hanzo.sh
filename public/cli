#!/bin/bash
# Hanzo CLI Installer
# Usage: curl -fsSL hanzo.sh/cli | bash
set -e
echo "Installing Hanzo CLI..."
if command -v uv >/dev/null 2>&1; then
    uv tool install hanzo
else
    curl -LsSf https://astral.sh/uv/install.sh | sh
    export PATH="$HOME/.local/bin:$PATH"
    uv tool install hanzo
fi
echo "âœ“ hanzo CLI installed"
echo "Run: hanzo --help"
