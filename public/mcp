#!/bin/bash
# Hanzo MCP - Model Context Protocol Server Installer
# Usage: curl -fsSL hanzo.sh/mcp | bash
set -e
echo "Installing Hanzo MCP..."
if command -v uv >/dev/null 2>&1; then
    uv tool install hanzo-mcp
else
    curl -LsSf https://astral.sh/uv/install.sh | sh
    export PATH="$HOME/.local/bin:$PATH"
    uv tool install hanzo-mcp
fi
echo "âœ“ hanzo-mcp installed"
echo "Run: hanzo-mcp"
